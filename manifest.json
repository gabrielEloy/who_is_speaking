{
    "name": "who is speaking ?",
    "version": "1.0",
    "description": "Build an Extension!",
    "manifest_version": 2,
    "icons": {
        "16": "./icons/icon16.png",
        "32": "./icons/icon32.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "declarativeContent",
        "storage",
        "http://*/*",
        "https://*/*",
        "tabs",
        "activeTab"
    ],
    "page_action": {
        "default_popup": "popup.html"
    }
}